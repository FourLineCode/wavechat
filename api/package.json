{
	"name": "wave-server",
	"version": "1.0.0",
	"description": "Backend server for wavechat",
	"main": "index.js",
	"author": "FourLineCode",
	"license": "MIT",
	"homepage": "https://github.com/FourLineCode/wavechat#readme",
	"scripts": {
		"dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"prisma:docker": "docker-compose run -p 5555:5555 api pnpm prisma",
		"migrate": "docker-compose run -p 5555:5555 api pnpm prisma migrate dev",
		"generate": "docker-compose run -p 5555:5555 api pnpm prisma generate",
		"seed": "docker-compose run -p 5555:5555 api pnpm prisma db seed --preview-feature",
		"studio": "docker-compose run -p 5555:5555 api pnpm prisma studio --browser none",
		"db:reset": "pnpm migrate -n init && pnpm seed"
	},
	"dependencies": {
		"@giraphql/core": "^2.14.1",
		"@giraphql/plugin-dataloader": "^2.12.0",
		"@giraphql/plugin-scope-auth": "^2.9.0",
		"@giraphql/plugin-validation": "^2.9.1",
		"@paljs/plugins": "^3.8.2",
		"@prisma/client": "^2.30.0",
		"apollo-server-express": "^3.3.0",
		"bcrypt": "^5.0.1",
		"cookie-parser": "^1.4.5",
		"cors": "^2.8.5",
		"dataloader": "^2.0.0",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"graphql": "^15.5.1",
		"helmet": "^4.6.0",
		"jsonwebtoken": "^8.5.1",
		"morgan": "^1.10.0",
		"socket.io": "^4.1.3",
		"zod": "^3.8.1"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/cookie-parser": "^1.4.2",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/jsonwebtoken": "^8.5.5",
		"@types/morgan": "^1.9.3",
		"@types/node": "^16.7.13",
		"apollo-server-core": "^3.3.0",
		"prisma": "^2.30.0",
		"ts-node": "^10.2.1",
		"ts-node-dev": "^1.1.8",
		"typescript": "^4.3.5"
	}
}
