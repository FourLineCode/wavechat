{
    "name": "@wavechat/api",
    "version": "1.0.0",
    "description": "Api server for wavechat",
    "main": "dist/src/index.js",
    "author": "FourLineCode",
    "license": "MIT",
    "homepage": "https://github.com/FourLineCode/wavechat#readme",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
        "build": "tsc",
        "start": "NODE_PATH=dist node dist/src/index.js",
        "typecheck": "tsc --noEmit",
        "clean": "rm -rf node_modules && pnpm clean:cache",
        "clean:cache": "rm -rf dist && rm -rf .turbo",
        "migrate": "prisma migrate dev",
        "generate": "prisma generate",
        "seed": "prisma db seed",
        "studio": "prisma studio --browser none",
        "db:init": "pnpm migrate && pnpm seed"
    },
    "prisma": {
        "seed": "ts-node --transpile-only -r tsconfig-paths/register prisma/seed.ts"
    },
    "dependencies": {
        "@giraphql/core": "2.23.0",
        "@giraphql/plugin-dataloader": "^2.20.0",
        "@giraphql/plugin-scope-auth": "^2.15.0",
        "@giraphql/plugin-validation": "^2.16.0",
        "@prisma/client": "^3.8.1",
        "apollo-server-express": "^3.6.2",
        "aws-sdk": "^2.1062.0",
        "bcrypt": "^5.0.1",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dataloader": "^2.0.0",
        "dotenv": "^14.3.0",
        "express": "^4.17.2",
        "graphql": "^16.2.0",
        "graphql-upload": "^13.0.0",
        "helmet": "^5.0.2",
        "jsonwebtoken": "^8.5.1",
        "morgan": "^1.10.0",
        "zod": "^3.11.6"
    },
    "devDependencies": {
        "@faker-js/faker": "^6.0.0-alpha.4",
        "@types/bcrypt": "^5.0.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/graphql-upload": "^8.0.10",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/morgan": "^1.9.3",
        "@types/node": "^17.0.12",
        "@wavechat/shared": "workspace:*",
        "apollo-server-core": "^3.6.2",
        "prisma": "^3.8.1",
        "ts-node": "^10.4.0",
        "ts-node-dev": "^1.1.8",
        "tsconfig-paths": "^3.11.0",
        "typescript": "^4.5.5"
    }
}
