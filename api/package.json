{
	"name": "@wavechat/api",
	"version": "1.0.0",
	"description": "Api server for wavechat",
	"main": "dist/src/index.js",
	"author": "FourLineCode",
	"license": "MIT",
	"homepage": "https://github.com/FourLineCode/wavechat#readme",
	"scripts": {
		"dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
		"build": "tsc",
		"start": "NODE_PATH=dist node dist/src/index.js",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf node_modules && rm -rf dist",
		"clean:cache": "rm -rf dist",
		"dep": "pnpm install",
		"migrate": "prisma migrate dev",
		"generate": "prisma generate",
		"seed": "prisma db seed",
		"studio": "prisma studio --browser none",
		"db:init": "pnpm migrate && pnpm seed"
	},
	"prisma": {
		"seed": "ts-node prisma/seed.ts"
	},
	"dependencies": {
		"@giraphql/core": "2.19.0",
		"@giraphql/plugin-dataloader": "^2.18.0",
		"@giraphql/plugin-scope-auth": "^2.12.0",
		"@giraphql/plugin-validation": "^2.13.0",
		"@prisma/client": "^3.4.2",
		"apollo-server-express": "^3.5.0",
		"aws-sdk": "^2.1037.0",
		"bcrypt": "^5.0.1",
		"cookie-parser": "^1.4.5",
		"cors": "^2.8.5",
		"dataloader": "^2.0.0",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"graphql": "~16.1.0",
		"graphql-upload": "^13.0.0",
		"helmet": "^4.6.0",
		"jsonwebtoken": "^8.5.1",
		"morgan": "^1.10.0",
		"zod": "^3.11.6"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/cookie-parser": "^1.4.2",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/faker": "^5.5.9",
		"@types/graphql-upload": "^8.0.7",
		"@types/jsonwebtoken": "^8.5.5",
		"@types/morgan": "^1.9.3",
		"@types/node": "^16.11.7",
		"@wavechat/shared": "workspace:*",
		"apollo-server-core": "^3.5.0",
		"faker": "^5.5.3",
		"prisma": "^3.4.2",
		"ts-node": "^10.4.0",
		"ts-node-dev": "^1.1.8",
		"tsconfig-paths": "^3.11.0",
		"typescript": "^4.4.4"
	}
}
