{
	"name": "wave-server",
	"version": "1.0.0",
	"description": "Backend server for wavechat",
	"main": "index.js",
	"author": "FourLineCode",
	"license": "MIT",
	"homepage": "https://github.com/FourLineCode/wavechat#readme",
	"scripts": {
		"dev": "ts-node-dev --respawn --transpile-only src/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"prisma:docker": "docker-compose run -p 5555:5555 server yarn --cwd server prisma",
		"migrate": "yarn prisma:docker migrate dev",
		"generate": "yarn prisma:docker generate",
		"seed": "yarn prisma:docker db seed --preview-feature",
		"studio": "yarn prisma:docker studio --browser none",
		"db:reset": "yarn migrate -n init && yarn generate && yarn seed"
	},
	"dependencies": {
		"@giraphql/core": "^2.8.0",
		"@giraphql/plugin-dataloader": "^2.5.3",
		"@giraphql/plugin-scope-auth": "^2.4.1",
		"@giraphql/plugin-validation": "^2.6.0",
		"@paljs/plugins": "^3.4.0",
		"@prisma/client": "^2.25.0",
		"@types/morgan": "^1.9.2",
		"apollo-server-express": "^2.25.2",
		"bcrypt": "^5.0.1",
		"cors": "^2.8.5",
		"dataloader": "^2.0.0",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"graphql": "^15.5.1",
		"helmet": "^4.6.0",
		"morgan": "^1.10.0",
		"socket.io": "^4.1.2",
		"zod": "^3.2.0"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/cors": "^2.8.10",
		"@types/express": "^4.17.12",
		"prisma": "^2.25.0",
		"ts-node": "^10.0.0",
		"ts-node-dev": "^1.1.6",
		"typescript": "^4.3.4"
	}
}
