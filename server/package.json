{
	"name": "wave-server",
	"version": "1.0.0",
	"description": "Backend server for wavechat",
	"main": "index.js",
	"author": "FourLineCode",
	"license": "MIT",
	"homepage": "https://github.com/FourLineCode/wavechat#readme",
	"scripts": {
		"dev": "ts-node-dev --respawn --transpile-only src/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"migrate": "yarn prisma migrate dev",
		"generate": "yarn prisma generate",
		"seed": "yarn prisma db seed --preview-feature",
		"studio": "yarn prisma studio",
		"db:reset": "rm -rf ./prisma/migrations && yarn migrate -n init && yarn generate && yarn seed"
	},
	"dependencies": {
		"@giraphql/core": "^2.8.0",
		"@paljs/plugins": "^3.4.0",
		"@prisma/client": "^2.25.0",
		"@types/morgan": "^1.9.2",
		"apollo-server-express": "^2.25.2",
		"bcrypt": "^5.0.1",
		"cors": "^2.8.5",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"graphql": "^15.5.1",
		"helmet": "^4.6.0",
		"morgan": "^1.10.0",
		"socket.io": "^4.1.2"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/cors": "^2.8.10",
		"@types/express": "^4.17.12",
		"prisma": "^2.25.0",
		"ts-node": "^10.0.0",
		"ts-node-dev": "^1.1.6",
		"typescript": "^4.3.4"
	}
}
