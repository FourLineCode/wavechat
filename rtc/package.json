{
	"name": "wave-rtc",
	"version": "1.0.0",
	"description": "Backend server for wavechat",
	"main": "dist/rtc/src/index.js",
	"author": "FourLineCode",
	"license": "MIT",
	"homepage": "https://github.com/FourLineCode/wavechat#readme",
	"scripts": {
		"dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
		"build": "tsc",
		"start": "NODE_PATH=dist/rtc node dist/rtc/src/index.js",
		"typecheck": "pnpx tsc --noEmit",
		"prod": "pnpm build && pnpm start"
	},
	"dependencies": {
		"dotenv": "^10.0.0",
		"fastify": "^3.22.1",
		"fastify-cookie": "^5.3.1",
		"fastify-cors": "^6.0.2",
		"fastify-helmet": "^5.3.2",
		"fastify-socket.io": "^2.0.1",
		"ioredis": "^4.28.0",
		"socket.io": "^4.3.1"
	},
	"devDependencies": {
		"@types/node": "^16.11.1",
		"ts-node": "^10.3.0",
		"ts-node-dev": "^1.1.8",
		"tsconfig-paths": "^3.11.0",
		"typescript": "^4.4.4"
	}
}
